<div class="col-xs-offset-2 col-xs-8 alert error-box">
  <span class="col-xs-1 glyphicon glyphicon-alert"></span>
  <div class="col-xs-offset-1 col-xs-9">
    <div>
      <%= message %>
    </div>
  </div>
  <div class="col-xs-1">
    <button type="button" class="btn-xs close" id="error-close-btn">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
</div>
